<h1>Welcome to Karl's Jr!</h1>

<div id="party">
    <h2>Burgers for the People</h2>

    <ul>
        {{#each burgers}} {{#unless devoured}} {{> burger-block devoured=false}} {{/unless}} {{/each}}
    </ul>
</div>

<div id="gulag">
    <h2>Burgers that have been<br>distributed to comrades</h2>

    <ul id="gulag-list">
        {{#each burgers}} {{#if devoured}} {{> burger-block devoured=true}} {{/if}} {{/each}}
    </ul>
</div>

<div id="newBurg">
    <h2>A new burger for the party</h2>
    <form class="create-form">

        <div class="form-group">
            <label for="bu">Burger Name:</label>
            <input type="text" id="bu" name="name">
        </div>

        <div class="form-group">
            <label for="eaten">Devoured?</label><br>
            <input type="radio" name="eaten" value="0" checked> Breadline<br>
            <input type="radio" name="eaten" value="1"> Devoured
        </div>

        <button type="submit">Add Burger</button>
    </form>
</div>